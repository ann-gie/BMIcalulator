<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anna.annagardynikpierwsze.BMIcalculator">


    <EditText
        android:id="@+id/height_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/podaj_wage"
        android:layout_alignRight="@+id/podaj_wage"
        android:layout_below="@+id/podaj_wz"
        android:text=""
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="122dp" />

    <EditText
        android:id="@+id/mass_"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/podaj_wage"
        android:layout_alignRight="@+id/podaj_wage"
        android:layout_below="@+id/height_"
        android:layout_marginTop="129dp"
        android:text=""
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="184dp" />

    <Button
        android:id="@+id/licz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_toEndOf="@+id/mass_"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/mass_" />

    <TextView
        android:id="@+id/podaj_wz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Wzrost:"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/podaj_wage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masa:"
        android:layout_alignBottom="@+id/mass_"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="48dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:layout_marginRight="66dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/switch1"
        android:layout_alignTop="@+id/licz"
        android:layout_marginTop="41dp"
        android:text="TextView" />

</RelativeLayout>
